  <%# https://type.fit/api/quotes %>
  <%# "https://zenquotes.io/api/today" %>
  <div data-controller="quotes" data-quotes-url-value="https://type.fit/api/quotes">
    <div data-quotes-target="quote" id="quote"></div>
    <div class="cards">
      <div class="each_card">
        <%= link_to '<i class="bi bi-journal-richtext tile-icons"></i>'.html_safe, posts_path(date: Time.now.strftime('%Y-%m-%d')) %>
