      </div>
      <div class="each_card">
        <%= link_to '<i class="fa-solid fa-pencil tile-icons"></i>'.html_safe, tiles_scribble_path %>
        <h2 class="tile_title">Scribble</h2>
      </div>
      <div class="each_card">
        <%= link_to '<i class="fa-regular fa-rectangle-list tile-icons"></i>'.html_safe, goals_path %>
        <h2 class="tile_title">Goals</h2>
      </div>
      <div class="each_card">
        <%= link_to '<i class="fa-solid fa-person-walking tile-icons"></i>'.html_safe, tiles_exercise_path, data: {turbo: false} %>
        <h2 class="tile_title">Outdoors</h2>
      </div>
      <div class="each_card">
        <%= link_to '<i class="fa-solid fa-film tile-icons"></i>'.html_safe, tiles_videos_path %>
        <h2 class="tile_title">Videos</h2>
      </div>

